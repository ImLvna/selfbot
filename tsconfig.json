{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ES5",
            "ES6",
            "ES2015",
            "ESNext",
            "DOM"
        ],
        "module": "CommonJS",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./out",
        "resolveJsonModule": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ]
}